{
    "name": "dataflow1",
    "properties": {
        "type": "MappingDataFlow",
        "typeProperties": {
            "sources": [
                {
                    "linkedService": {
                        "referenceName": "AzureDataLakeStorage1",
                        "type": "LinkedServiceReference"
                    },
                    "name": "source1"
                }
            ],
            "sinks": [
                {
                    "linkedService": {
                        "referenceName": "AzureDataLakeStorage1",
                        "type": "LinkedServiceReference"
                    },
                    "name": "sink1"
                }
            ],
            "transformations": [
                {
                    "name": "split1"
                },
                {
                    "name": "select1"
                },
                {
                    "name": "window1"
                },
                {
                    "name": "filter1"
                }
            ],
            "scriptLines": [
                "source(output(",
                "          CustomerID as short,",
                "          FirstName as string,",
                "          LastName as string,",
                "          Email as string,",
                "          ActiveStatus as boolean",
                "     ),",
                "     useSchema: false,",
                "     allowSchemaDrift: true,",
                "     validateSchema: false,",
                "     ignoreNoFilesFound: false,",
                "     format: 'delimited',",
                "     fileSystem: 'input',",
                "     folderPath: 'customer',",
                "     fileName: 'customer.csv',",
                "     columnDelimiter: ',',",
                "     escapeChar: '\\\\',",
                "     quoteChar: '\\\"',",
                "     columnNamesAsHeader: true) ~> source1",
                "source1 split(!(isNull(CustomerID)),",
                "     disjoint: false) ~> split1@(notnullprimarykeys)",
                "filter1 select(mapColumn(",
                "          CustomerID,",
                "          FirstName,",
                "          LastName,",
                "          Email,",
                "          ActiveStatus,",
                "          Cnt",
                "     ),",
                "     skipDuplicateMapInputs: true,",
                "     skipDuplicateMapOutputs: true) ~> select1",
                "split1@notnullprimarykeys window(over(CustomerID),",
                "     desc(CustomerID, true),",
                "     Cnt = rowNumber()) ~> window1",
                "window1 filter(Cnt==1) ~> filter1",
                "select1 sink(allowSchemaDrift: true,",
                "     validateSchema: false,",
                "     format: 'parquet',",
                "     fileSystem: 'silverlayer',",
                "     folderPath: 'customer',",
                "     umask: 0022,",
                "     preCommands: [],",
                "     postCommands: [],",
                "     skipDuplicateMapInputs: true,",
                "     skipDuplicateMapOutputs: true) ~> sink1"
            ]
        }
    }
}